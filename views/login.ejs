<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <script src="https://www.google.com/recaptcha/api.js?render=6LcGQKEqAAAAAAT9FZ3K5Ko8cCvPyyNGr-GQGPgy"></script>
</head>
<body>
    <h1>Login</h1>
    <form action="/auth/login" method="POST" id="loginForm">
        <input type="text" name="username" placeholder="Username" required />
        <input type="password" name="password" placeholder="Password" required />
        <!-- The reCAPTCHA token will be added dynamically -->
        <button type="submit">Login</button>
    </form>
    <script>
        grecaptcha.ready(function() {
            grecaptcha.execute('6LcGQKEqAAAAAAT9FZ3K5Ko8cCvPyyNGr-GQGPgy', {action: 'login'}).then(function(token) {
                const recaptchaInput = document.createElement('input');
                recaptchaInput.setAttribute('type', 'hidden');
                recaptchaInput.setAttribute('name', 'g-recaptcha-response');
                recaptchaInput.setAttribute('value', token);
                document.getElementById('loginForm').appendChild(recaptchaInput);
            });
        });
    </script>
</body>
</html>
